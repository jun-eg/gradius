datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Player {
  id          String @id
  player_name String
  pos_x       Int
  pos_y       Int
  speed       Int
  hp          Int
  score       Int
  size_width  Int
  size_height Int
}
